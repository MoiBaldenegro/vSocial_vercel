---
import { CldUploadWidget } from "astro-cloudinary";
import { getI18n } from "../i18n";

const {currentLocale = "en"} = Astro;

const i18n = getI18n({currentLocale});
---

<div
  class="mx-auto gap-6 flex justify-center items-center  rounded-lg p-6 m-12" id="upload-section"
>
<label
class="block text-4xl text-center font-medium text-gray-700 dark:text-gray-300"
>
{i18n.form.uploadImage}
</label>


  <CldUploadWidget
    id="local-widget"
    options={{
      sources: ["local"],
      multiple: false,
      maxFiles: 1,
      language: "es",
      text: {
        es: {
          dropbox: {
            dd_title_single: "Sube tu foto",
          },
        },
      },
      styles: {
        palette: {
            window: "#10173a",
            sourceBg: "#20304b",
            windowBorder: "#7171D0",
            tabIcon: "#79F7FF",
            inactiveTabIcon: "#8E9FBF",
            menuIcons: "#CCE8FF",
            link: "#72F1FF",
            action: "#5333FF",
            inProgress: "#00ffcc",
            complete: "#33ff00",
            error: "#cc3333",
            textDark: "#000000",
            textLight: "#ffffff"
        },
        fonts: {
            default: null,
            "'Poppins', sans-serif": {
                url: "https://fonts.googleapis.com/css?family=Poppins",
                active: true
            }
        }
    }

    }}
    uploadPreset="mxvi-upload"
  >
    <button id="cdWidget" class="flex gap-4 items-center bg-custom-linear uppercase transition-opacity duration-300 hover:opacity-80 text-white font-bold py-6 px-12 rounded-xl transition ease text-3xl m-2">{i18n.buttons.uploadImage} <img src="./upload.svg" class="size-[42px]" alt="upload icon"></button>
  </CldUploadWidget>
</div>
<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  
</style>
