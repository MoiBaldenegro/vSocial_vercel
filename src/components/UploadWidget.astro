---
import { CldUploadWidget } from "astro-cloudinary";
import { getI18n } from "../i18n";

const {currentLocale = "en"} = Astro;

const i18n = getI18n({currentLocale});
---

<div
  class="max-w-md mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-12" id="upload-section"
>
<label
for="userImage"
class="block text-sm font-medium text-gray-700 dark:text-gray-300"
>
{i18n.form.uploadImage}
</label>


  <CldUploadWidget
    id="local-widget"
    options={{
      sources: ["local"],
      multiple: false,
      maxFiles: 1,
      language: "es",
      text: {
        es: {
          dropbox: {
            dd_title_single: "Sube tu foto",
          },
        },
      },
      styles: {
        palette: {
            window: "#10173a",
            sourceBg: "#20304b",
            windowBorder: "#7171D0",
            tabIcon: "#79F7FF",
            inactiveTabIcon: "#8E9FBF",
            menuIcons: "#CCE8FF",
            link: "#72F1FF",
            action: "#5333FF",
            inProgress: "#00ffcc",
            complete: "#33ff00",
            error: "#cc3333",
            textDark: "#000000",
            textLight: "#ffffff"
        },
        fonts: {
            default: null,
            "'Poppins', sans-serif": {
                url: "https://fonts.googleapis.com/css?family=Poppins",
                active: true
            }
        }
    }

    }}
    uploadPreset="mxvi-upload"
  >
    <button id="cdWidget">Local</button>
  </CldUploadWidget>
</div>
<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  #cdWidget {
    background-color: #00c65e;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s ease-in-out;
  }
  #cdWidget:hover {
    background-color: #00b359;
  }
</style>
